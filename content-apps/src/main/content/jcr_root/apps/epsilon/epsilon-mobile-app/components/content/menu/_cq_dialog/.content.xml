<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Menu Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <multifield
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="/apps/epsilon2_0/components/content/multifield"
                                        fieldDescription="Click 'Add field' to add more menu options"
                                        fieldLabel="Menu Options">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            name="./items">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <menuType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                                            fieldLabel="Select Menu Option Type"
                                                            name="./menuType">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <searchOption
                                                                    jcr:primaryType="nt:unstructured"
                                                                    key="searchOption"
                                                                    text="Search Type"
                                                                    value="searchOption"/>
                                                                <redirectType
                                                                    jcr:primaryType="nt:unstructured"
                                                                    key="redirectType"
                                                                    text="Redirection Type"
                                                                    value="redirectType"/>
                                                                <childrenDisplay
                                                                    jcr:primaryType="nt:unstructured"
                                                                    key="childrenDisplay"
                                                                    text="Display Children Type"
                                                                    value="childrenDisplay"/>
                                                                <categoryList
                                                                    jcr:primaryType="nt:unstructured"
                                                                    key="categoryList"
                                                                    text="Category Based Type"
                                                                    value="categoryList"/>
                                                                <contactUs
                                                                    jcr:primaryType="nt:unstructured"
                                                                    key="contactUs"
                                                                    text="Contact Us Type"
                                                                    value="contactUs"/>
                                                            </items>
                                                        </menuType>
                                                        <menuPath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            emptyText="Enter fully qualified URL for external URLs. Eg: https://www.epsilon.com"
                                                            fieldDescription="Enter fully qualified URL for external URLs. Eg: https://www.epsilon.com"
                                                            fieldLabel="Menu Option Page Path"
                                                            name="./menuPath"
                                                            required="{Boolean}true"
                                                            rootPath="/content/epsilon2_0"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </multifield>
                                </items>
                            </column>
                        </items>
                    </basic>
                    <menuTab
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Additional Info"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <contactSection
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Details for Contact Us"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <officesLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Offices Label"
                                                maxlength="{Long}15"
                                                name="./officesLabel"/>
                                            <viewPath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                emptyText="Enter fully qualified URL for external URLs. Eg: https://www.epsilon.com"
                                                fieldDescription="Enter fully qualified URL for external URLs. Eg: https://www.epsilon.com"
                                                fieldLabel="Path for View All"
                                                name="./viewPath"
                                                rootPath="/content/epsilon2_0"/>
                                            <viewLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="View All Label"
                                                maxlength="{Long}25"
                                                name="./viewLabel"/>
                                        </items>
                                    </contactSection>
                                    <searchSection
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Details for Search"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <searchUrl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                emptyText="Enter fully qualified URL for external URLs. Eg: https://www.epsilon.com"
                                                fieldDescription="Enter fully qualified URL for external URLs. Eg: https://www.epsilon.com"
                                                fieldLabel="Search Results Page URL"
                                                name="./searchPageUrl"
                                                rootPath="/content"/>
                                            <searchButton
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Search Button Label"
                                                maxlength="{Long}10"
                                                name="./searchButton"/>
                                            <searchPlaceholder
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Search Placeholder Label"
                                                maxlength="{Long}20"
                                                name="./searchPlaceholder"/>
                                        </items>
                                    </searchSection>
                                    <categorySection
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Details for Category Based Type"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <tags
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/common/tagspicker"
                                                fieldLabel="Allowed Tags for Category Type"
                                                name="./cq:tags"
                                                rootPath="/etc/tags/epsilon"/>
                                        </items>
                                    </categorySection>
                                </items>
                            </column>
                        </items>
                    </menuTab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
